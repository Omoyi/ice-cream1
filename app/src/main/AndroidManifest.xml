<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myicecream.ice_cream1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/b"
        android:label="@string/gallery"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".frontend.MyLoginActivity"></activity>
        <activity android:name=".frontend.iceCreamList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myicecream.ice_cream1.frontend.icecreamGallery"></meta-data>
        </activity>
        <activity android:name=".frontend.icecreamGallery">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myicecream.ice_cream1.frontend.MainActivity"></meta-data>
        </activity>
        <activity
            android:name=".frontend.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>